@model ArabTradersGroup.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> @ArabTradersGroup.App_LocalResources.ATG.arabtradersgroup </title>
    <link href="~/Images/imagesadmin/favicon.ico" rel="icon" />
    <!-- stylesheets of Bootstrap  css -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.cssbootstrap">

    <!-- Libarary of font Awesome -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.cssfontawesome">

    <!-- Hover Css -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.csshover">

    <!-- My Style CSS -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.csssignup">

    <!-- My Media CSS -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.cssmedia">

    <!-- Fonts-->
    <link rel='stylesheet' href='@ArabTradersGroup.App_LocalResources.ATG.csssignupfonts'>


    <!--[if lt IE 9]>
        <script src="js/html5shiv.min.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <!-- ----------------------------------------------------------- -->

</head>


<body>

    <!-- ------------------------------------------------------------------------------- -->
    <!-- ------------------------------------------------------------------------------- -->


    <section class="sigin">

        <div class="container">

            <div class="row">

                <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6">

                    <div class="sigin-content">

                        <div class="myimg">
                            <h1>@ArabTradersGroup.App_LocalResources.ATG.btnsignup</h1>
                        </div>

                        <div class="myform">

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "RegisterForm", role = "form" }))
                            {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })

                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder =@ArabTradersGroup.App_LocalResources.ATG.RegisterFirstName, required = "required" })
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = ArabTradersGroup.App_LocalResources.ATG.RegisterLastName, required = "required" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = ArabTradersGroup.App_LocalResources.ATG.RegisterEmail, required = "required" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control lock", placeholder = ArabTradersGroup.App_LocalResources.ATG.RegisterPassword, required = "required" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = ArabTradersGroup.App_LocalResources.ATG.RegisterConfirmpassword })

                                <div class="forgot-top-grids">
                                    <div class="forgot-grid">
                                        <ul>
                                            <li>
                                                <input type="checkbox" id="brand1" value="">
                                                <label for="brand1"><span></span>@ArabTradersGroup.App_LocalResources.ATG.agreeterms</label>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="clearfix"> </div>
                                </div>

                                <input type="submit" class="btn btn-default" value="@ArabTradersGroup.App_LocalResources.ATG.btnsignup" />

                                <div class="sign-down">
                                    <h4>
                                        @ArabTradersGroup.App_LocalResources.ATG.alreadyhaveaccount
                                        <a href="@Url.Action("Login","Account",null)"> @ArabTradersGroup.App_LocalResources.ATG.loginu</a>
                                    </h4>
                                    <h5>
                                        <a href="@Url.Action("Index", "Home", null)">@ArabTradersGroup.App_LocalResources.ATG.backhome</a>
                                    </h5>
                                </div>

                            }




                        </div>
                        <!-- End myform -->


                    </div>

                </div>
                <!-- End col-xs-offset-3  -->

            </div>
            <!-- End Row -->

        </div>
        <!-- End Container -->

    </section>





    <!-- ------------------------------------------------------------------------------- -->
    <!-- ------------------------------------------------------------------------------- -->


    <script src="~/Scripts/jsadmin/jquery-3.2.1.min.js"></script>

    <!-- bootstrap js -->
    <script src="~/Scripts/jsadmin/bootstrap.min.js"></script>

    <!-- nicescroll plugin -->
    <script src="~/Scripts/jsadmin/jquery.nicescroll.min.js"></script>

    <script src="~/Scripts/jsadmin/jquery.barfiller.js"></script>

    <!-- Java Script Code -->
    <script src="~/Scripts/jsadmin/myCode.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>


