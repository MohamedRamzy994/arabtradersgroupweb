                        <li class="filter" data-role="button" data-filter=".vegetables">Vegetables</li>
                    </ul>
                </div>*@

            <!--Filter List-->
            <div class="filter-list row clearfix">

                @foreach (var item in Model)
    {

        if (CultureInfo.CurrentCulture.Name == "en-US")
        {


            <!--Default Portfolio Item -->
            <div class="default-portfolio-item mix mix_all col-md-4 col-sm-6 col-xs-12 market organic vegetables">
                <div class="inner-box">
                    <figure class="image-box"><img src="@Url.Content("/Images/imagesadmin/galleriesresized/"+@item.Photo_Path)" alt=""></figure>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="overlay-content">
                                <a href="@Url.Content("/Images/imagesadmin/galleries/"+@item.Photo_Path)" class="lightbox-image option-btn theme-btn" title="@item.Photo_Caption_En" data-fancybox-group="fancybox"><span class="fa fa-search"></span></a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

}
else if (CultureInfo.CurrentCulture.Name == "ar-SA")
{


            <!--Default Portfolio Item -->
            <div class="default-portfolio-item mix mix_all col-md-4 col-sm-6 col-xs-12 market organic vegetables">
                <div class="inner-box">
                    <figure class="image-box"><img src="@Url.Content("/Images/imagesadmin/galleriesresized/"+@item.Photo_Path)" alt=""></figure>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="overlay-content">
                                <a href="@Url.Content("/Images/imagesadmin/galleries/"+@item.Photo_Path)" class="lightbox-image option-btn theme-btn" title="@item.Photo_Caption_Ar" data-fancybox-group="fancybox"><span class="fa fa-search"></span></a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>



}







}
            </div>

        </div>

        <!-- Styled Pagination -->
        <div class="styled-pagination text-center">
            @*<ul>
                    <li><a href="#" class="active">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a class="next" href="#">Next</a></li>
                </ul>*@

            @Html.PagedListPager(Model, page => Url.Action("Gallery", "Home", new { page }))


        </div>

    </div>
</section>



