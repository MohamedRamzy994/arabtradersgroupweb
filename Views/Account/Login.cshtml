@using ArabTradersGroup.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> @ViewBag.Title </title>
    <link href="~/Images/imagesadmin/favicon.ico" rel="icon" />
    <!-- stylesheets of Bootstrap  css -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.cssbootstrap">

    <!-- Libarary of font Awesome -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.cssfontawesome">

    <!-- Hover Css -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.csshover">

    <!-- My Style CSS -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.csssignup">

    <!-- My Media CSS -->
    <link rel="stylesheet" href="@ArabTradersGroup.App_LocalResources.ATG.cssmedia">

    <!-- Fonts-->
    <link rel='stylesheet' href='@ArabTradersGroup.App_LocalResources.ATG.csssignupfonts'>


    <!--[if lt IE 9]>
        <script src="js/html5shiv.min.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <!-- ----------------------------------------------------------- -->

</head>


<body>

    <!-- ------------------------------------------------------------------------------- -->


    <section class="login">

        <div class="container">

            <div class="row">

                <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6">

                    <div class="login-content">

                        <div class="myimg">
                            <h1>@ArabTradersGroup.App_LocalResources.ATG.loginu</h1>
                        </div>

                        <div class="myform">

                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control",placeholder=ArabTradersGroup.App_LocalResources.ATG.UserEmail })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder =ArabTradersGroup.App_LocalResources.ATG.UserPassword })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


                        <div class="forgot-top-grids">
                            <div class="forgot-grid">
                                <ul>
                                    <li>
                                        @Html.CheckBoxFor(m => m.RememberMe, new { id = "brand1", placeholder = ArabTradersGroup.App_LocalResources.ATG.UserRememberme })
                                        <label for="brand1"><span></span>@Html.DisplayFor(m=>m.RememberMe)</label>
                                    </li>
                                </ul>
                            </div>

                            <div class="clearfix"> </div>
                        </div>








                        <input type="submit" value="@ArabTradersGroup.App_LocalResources.ATG.loginu">

                        <div class="login-block">
                            <h3>
                             
                                <a href="@Url.Action("Register", "Account")">@ArabTradersGroup.App_LocalResources.ATG.signupnow </a>
                            </h3>

                            <h2>@ArabTradersGroup.App_LocalResources.ATG.orloginwith</h2>

                            <div class="login-icons">
                                <ul>
                                    <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#" class="google"><i class="fa fa-google-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>



                        <h5 class="link"><a href="@Url.Action("Index","Home",null)">@ArabTradersGroup.App_LocalResources.ATG.backhome</a></h5>

}


                        </div>
                        <!-- End myform -->


                    </div>

                </div>
                <!-- End col-xs-offset-3  -->

            </div>
            <!-- End Row -->

        </div>
        <!-- End Container -->

    </section>




    <!-- ------------------------------------------------------------------------------- -->


    <script src="~/Scripts/jsadmin/jquery-3.2.1.min.js"></script>

    <!-- bootstrap js -->
    <script src="~/Scripts/jsadmin/bootstrap.min.js"></script>

    <!-- nicescroll plugin -->
    <script src="~/Scripts/jsadmin/jquery.nicescroll.min.js"></script>

    <script src="~/Scripts/jsadmin/jquery.barfiller.js"></script>

    <!-- Java Script Code -->
    <script src="~/Scripts/jsadmin/myCode.js"></script>

        @Scripts.Render("~/bundles/jqueryval")

</body>
</html>


