@using ArabTradersGroup.Models
@using System.Threading
@using System.Globalization
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<AspNetGallery>
@{
    ViewBag.Title = "Gallery";
    ViewBag.currentgalley = "current";
}



<!--Page Title-->
<section class="page-title" style="background-image:url(../../Images/images/background/bg-page-title-1.jpg);">
    <div class="auto-container">
        <h1>@ArabTradersGroup.App_LocalResources.ATG.latestgalleries</h1>
    </div>
</section>


<!--Gallery Section-->
<section class="gallery-section gallery-page">

    <div class="auto-container">

        <div class="mixitup-gallery">
            <!--Filter-->
            @*<div class="filters text-center">
                    <ul class="filter-tabs filter-btns clearfix">
                        <li class="active filter" data-role="button" data-filter="all">All</li>
                        <li class="active filter" data-role="button" data-filter=".animals">Animals</li>
